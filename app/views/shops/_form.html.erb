    <div class="col-md-1"></div>
  </div>
  <div class="row">
  	<div class="col-md-2">

  	</div>
  	<div class="col-md-6">

  	</div>
  	<div class="col-md-1"></div>
  </div>
  <div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-6">

    </div>
    <div class="col-md-1"></div>
  </div><br /> <br /> 
  <div class="row">
    <div class="col-md-2">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
    <div class="col-md-6">
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                shops_path, :class => 'btn btn-default' %>
    </div>
    <div class="col-md-1"></div>
  </div>






<% end %>
